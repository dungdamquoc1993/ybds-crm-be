# Docker configuration
YBDS_BE_CONTAINER_NAME=ybds-be

DB_CONTAINER_NAME=ybds-postgres
SERVER_PORT=3000

# GitLab registry configuration
GITLAB_REGISTRY=registry.gitlab.com
YBDS_BE_DOCKER_IMAGE=your-namespace/be-ybds
YBDS_BE_PIPELINE_NUMBER=latest

# Database configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=ybds-user
DB_PASS=ybds-password
DB_SSL_MODE=disable

# Database names
DB_ACCOUNT_NAME=ybds_user
DB_NOTIFICATION_NAME=ybds_notification
DB_ORDER_NAME=ybds_order
DB_PRODUCT_NAME=ybds_product

# Server configuration
SERVER_PORT=3000
ENV=development

# JWT configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY=24h

# Upload configuration
UPLOAD_DIR=/app/uploads
UPLOAD_MAX_SIZE_MB=10 